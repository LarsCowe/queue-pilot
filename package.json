{
  "name": "queue-pilot",
  "version": "0.5.3",
  "description": "MCP server for message queue development â€” combines RabbitMQ and Kafka message inspection with JSON Schema validation",
  "type": "module",
  "bin": {
    "queue-pilot": "dist/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "npm run clean && tsc && shx chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run --exclude src/integration.test.ts",
    "test:watch": "vitest --exclude src/integration.test.ts",
    "test:coverage": "vitest run --coverage --exclude src/integration.test.ts",
    "typecheck": "tsc --noEmit",
    "test:integration": "vitest run src/integration.test.ts",
    "prepublishOnly": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LarsCowe/queue-pilot.git"
  },
  "homepage": "https://github.com/LarsCowe/queue-pilot#readme",
  "bugs": {
    "url": "https://github.com/LarsCowe/queue-pilot/issues"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "rabbitmq",
    "kafka",
    "message-queue",
    "message-broker",
    "schema-validation",
    "json-schema",
    "amqp"
  ],
  "mcpName": "io.github.LarsCowe/queue-pilot",
  "author": "Lars",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "@confluentinc/kafka-javascript": "^1.8.0"
  },
  "peerDependenciesMeta": {
    "@confluentinc/kafka-javascript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.19.11",
    "@vitest/coverage-v8": "^3.2.4",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
